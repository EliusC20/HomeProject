        <servlet-name>ResolveServlet</servlet-name>
        <url-pattern>/ResolveServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResponseProgress</servlet-name>
        <url-pattern>/ResponseProgress.do</url-pattern>
    </servlet-mapping>

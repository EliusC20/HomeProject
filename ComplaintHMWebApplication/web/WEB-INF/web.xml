    <servlet>
        <servlet-name>Register_complainant</servlet-name>
        <servlet-class>za.ac.tut.web.Register_complainant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddComplaintsServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddComplaintsServlet</servlet-class>
